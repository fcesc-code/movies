{
  "name": "movies",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "serve:dev",
    "build": "npm-run-all clean build:prod",
    "build:prod": "ng build --outputHashing=all",
    "build:ssr": "npm-run-all build && ng run movies:server",
    "build:sourcemap": "ng build --source-map",
    "build:analyzeBundles": "node node_modules/.bin/source-map-explorer dist/movies/main*",
    "build:purgeCss": "node src/environments/postbuild.js",
    "build:analyze": "npm-run-all build:sourcemap build:analyzeBundles",
    "build:experimental": "npm-run-all build build:purgeCss",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless",
    "report:generate": "npx lighthouse http://127.0.0.1:8080/ --output html --output-path ./reports/index.html --view --chrome-flags=--headless",
    "report:clean": "rimraf reports/index.html",
    "report": "npm-run-all report:clean report:generate",
    "report:ci": "npm-run-all pwa report:generate",
    "prepare": "husky install",
    "ci": "npm-run-all lint test:ci clean build:ssr deploy",
    "clean": "rimraf dist/movies/",
    "lint": "ng lint",
    "deploy": "firebase deploy",
    "dev:ssr": "ng run movies:serve-ssr",
    "serve:dev": "ng serve -o",
    "serve:pwa": "npx http-server dist/movies/ -p 0 -o",
    "serve:ssr": "node dist/movies/server/main.js",
    "prerender": "ng run movies:prerender"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.1.0",
    "@angular/cdk": "^15.2.8",
    "@angular/common": "~13.1.0",
    "@angular/compiler": "~13.1.0",
    "@angular/core": "~13.1.0",
    "@angular/fire": "^7.5.0",
    "@angular/forms": "~13.1.0",
    "@angular/material": "^13.1.1",
    "@angular/platform-browser": "~13.1.0",
    "@angular/platform-browser-dynamic": "~13.1.0",
    "@angular/platform-server": "~13.1.0",
    "@angular/router": "~13.1.0",
    "@angular/service-worker": "~13.1.0",
    "@nguniversal/express-engine": "^13.0.1",
    "express": "^4.18.2",
    "firebase": "^9.21.0",
    "ngx-build-plus": "^15.0.0",
    "rxfire": "^6.0.0",
    "rxjs": "~7.8.1",
    "tslib": "^2.5.2",
    "zone.js": "~0.11.8"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.3.11",
    "@angular-eslint/builder": "16.0.1",
    "@angular-eslint/eslint-plugin": "13.0.1",
    "@angular-eslint/eslint-plugin-template": "16.0.1",
    "@angular-eslint/schematics": "13.0.1",
    "@angular-eslint/template-parser": "16.0.2",
    "@angular/cli": "~13.1.2",
    "@angular/compiler-cli": "~13.1.0",
    "@nguniversal/builders": "^13.0.1",
    "@types/express": "^4.17.0",
    "@types/jasmine": "~4.3.1",
    "@types/node": "^20.1.0",
    "@typescript-eslint/eslint-plugin": "5.59.1",
    "@typescript-eslint/parser": "5.59.11",
    "animate.css": "^4.1.1",
    "autoprefixer": "^10.4.1",
    "eslint": "^8.41.0",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "jasmine-core": "~5.0.0",
    "karma": "~6.4.2",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "lighthouse": "^9.6.8",
    "npm-run-all": "^4.1.5",
    "postcss-import": "^15.1.0",
    "postcss-loader": "^6.2.1",
    "purgecss": "^4.1.3",
    "rimraf": "^3.0.2",
    "source-map-explorer": "^2.5.3",
    "tailwindcss": "^3.3.2",
    "typescript": "~4.5.2"
  }
}
